{
  "$schema": "https://json.schemastore.org/stylelintrc",
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-recommended-scss",
    "stylelint-config-prettier-scss"
  ],
  "rules": {
    "scss/selector-nest-combinators": null,
    "number-max-precision": 5,
    "font-family-no-missing-generic-family-keyword": [
      true,
      {
        "ignoreFontFamilies": ["CaGov"]
      }
    ],
    "scss/no-global-function-names": null,
    "selector-class-pattern": null,
    "selector-id-pattern": null,
    "scss/selector-no-redundant-nesting-selector": null,
    "selector-nested-pattern": [
      "^(?:&(?!\\s*>)|[^a-zA-Z0-9])",
      {
        "message": "Safari 16.5 compatibility: nested selectors must start with '&' (not '& >') or any non-alphanumeric symbol."
      }
    ],
    "scss/dollar-variable-pattern": null,
    "no-descending-specificity": [true, { "ignore": "selectors-within-list" }],
    "scss/declaration-nested-properties": [
      "never",
      { "except": ["only-of-namespace"] }
    ],
    "scss/declaration-nested-properties-no-divided-groups": true,
    "property-no-vendor-prefix": [
      true,
      {
        "ignoreProperties": ["appearance"]
      }
    ],
    "value-keyword-case": ["lower", { "ignoreKeywords": ["currentColor"] }]
  }
}
